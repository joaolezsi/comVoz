  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask (venv)",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "Codigo/flaskProject1/app.py",
        "FLASK_DEBUG": "1",
        "MYSQL_HOST": "127.0.0.1",
        "MYSQL_PORT": "3306"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "--host=127.0.0.1",
        "--port=99999"
      ],
      "jinja": true,
      "justMyCode": true,
      "stopOnEntry": false,
      "console": "integratedTerminal",
      "python": "${workspaceFolder}/Codigo/flaskProject1/venv/Scripts/python.exe"
    },
    {
      "name": "Python Debugger: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "Codigo/flaskProject1/app.py",
        "FLASK_DEBUG": "1"
      },
      "args": ["run", "--no-debugger", "--no-reload"],
      "jinja": true,
      "autoStartBrowser": false
    }
  ]
}
